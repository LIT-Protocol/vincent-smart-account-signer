{
  "allowJs": true,
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "declaration": true,
    "outDir": "./out",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["./**/*.ts", "./src/types/**/*.d.ts"]
}
